<% layout("/layouts/boilerplate.ejs") %>
<head>
    <link rel="stylesheet" href="/css/new.css" />
</head>
<body>
    <div class="row">
        <form
            action="/listings/<%= listing._id %>?_method=PATCH"
            method="post"
            class="needs-validation"
            enctype="multipart/form-data"
            novalidate
        >
            <h2>Edit Listing</h2>
            <div class="mb-3">
                <div class="row">
                    <div class="mb-3 col-sm-8">
                        <label for="title" class="form-label">Title</label>
                        <input
                            name="listing[title]"
                            class="form-control"
                            id="title"
                            type="text"
                            value="<%= listing.title %>"
                            required
                        />
                        <span class="invalid-feedback"
                            >Please provide a valid title.</span
                        >
                    </div>
                    <div class="mb-3 col-sm-4">
                        <label for="price" class="form-label">Price</label>
                        <input
                            name="listing[price]"
                            class="form-control"
                            id="price"
                            type="number"
                            value="<%= listing.price %>"
                            required
                        />
                        <span class="invalid-feedback"
                            >Please provide a valid price.</span
                        >
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-sm-6">
                        <label for="city" class="form-label">City</label>
                        <input
                            name="listing[location]"
                            class="form-control"
                            id="city"
                            type="text"
                            value="<%= listing.location %>"
                            required
                        />
                        <span class="invalid-feedback"
                            >Please provide a valid city.</span
                        >
                    </div>
                    <div class="mb-3 col-sm-6">
                        <label for="country" class="form-label">Country</label>
                        <input
                            name="listing[country]"
                            class="form-control"
                            id="country"
                            type="text"
                            value="<%= listing.country %>"
                            required
                        />
                        <span class="invalid-feedback"
                            >Please provide a valid country.</span
                        >
                    </div>
                </div>
                <div class="mb-3">
                    <p>Original Image:</p>
                    <img src="<%= listing.image.url %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input
                        name="listing[image]"
                        class="form-control"
                        id="image"
                        type="file"
                    />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label"
                        >Description</label
                    >
                    <textarea
                        name="listing[description]"
                        class="form-control"
                        id="description"
                    >
<%= listing.description %></textarea
                    >
                </div>
            </div>
            <button class="btn form-btn mb-5 mt-4 offset-5">Edit</button>
        </form>
    </div>
</body>
